<% title = "Edit Registration for #{@active_conference.title}"  %>
<%= render :partial => '/shared/title_bar', :locals => {:title => title} %>
<%= render :partial => '/shared/notice' %>
<% if is_admin? || (@registration.user && (@registration.user == current_user)) %>

<div class="wrapper">    
    <div class="contentHeadline">
    	<span class="collumTopText">

    	</span>
    </div>
</div>

<div class="myWrapper">
	<span class="header"> Registration closes on November 6th, 2009</span>
	<br></br>
	<% if @registration %>
		<% form_for(@registration) do |form| %>
			<%= render :partial => "form", :locals => {:form => form} %>
			<br></br>
			<h1> <%= current_user.full_name || 'Hello' %>: If you bring a poster please submit title and abstract by clicking "manage posters" on left after clicking "OK"!</h1>
			<%= submit_tag "OK"%>
		<% end %>
	<% end %>

</div>
<%else%>
	insufficient privilege - please go back
<%end%>




